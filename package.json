{
  "name": "keplr",
  "version": "0.7.2",
  "description": "Keplr is a browser extension wallet for the Inter blockchain ecosystem.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev --parallel",
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint-test": "lerna run lint-test",
    "lint-fix": "lerna run lint-fix",
    "ci": "yarn install --frozen-lockfile && yarn build && yarn test",
    "ci-lint": "yarn install --frozen-lockfile && yarn lint-test",
    "ci-publish": "yarn install --frozen-lockfile && yarn clean && lerna run build --ignore @keplr/extension && lerna publish from-git"
  },
  "pre-commit": [
    "lint-test"
  ],
  "keywords": [],
  "author": "chainapsis",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/webpack": "^4.39.1",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.2.2",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-unicorn": "^24.0.0",
    "lerna": "^3.22.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "resolutions": {
    "@types/react": "^16.14.4",
    "scrypt-js": "^2.0.4",
    "@types/scrypt-js": "^2.0.3"
  }
}
